# GitHub App 정보 (https://github.com/settings/apps에서 생성)
# 자세한 설정 방법은 docs/GITHUB_APP_SETUP.md 참고
GITHUB_APP_ID=123456
GITHUB_CLIENT_ID=Iv1.xxxxxxxxxxxx
GITHUB_CLIENT_SECRET=your_github_app_client_secret_here
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYour\nPrivate\nKey\nHere\n-----END RSA PRIVATE KEY-----"

# GitHub Bot Token (비로그인 댓글 작성용)
# Personal Access Token (classic) 생성: https://github.com/settings/tokens
# 필요 권한: repo (Full control of private repositories) 또는 public_repo
GITHUB_BOT_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Repository 정보
GITHUB_REPO_OWNER=gdgoc-konkuk
GITHUB_REPO_NAME=25-26-study-js-deep-dive

# Auth 암호화 키 (64자 이상 랜덤 문자열)
# 생성 방법: openssl rand -base64 64
AUTH_SECRET=your_random_64_character_secret_key_here_please_generate_with_openssl

# 사이트 URL (Vercel 배포 후 실제 도메인으로 변경)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 토큰 유효 기간 (일 단위, 기본 7일)
TOKEN_VALIDITY_DAYS=7

# Rate Limiting 설정 (선택)
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000
