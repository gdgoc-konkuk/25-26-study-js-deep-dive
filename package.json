{
  "name": "prwiki",
  "version": "0.1.0",
  "description": "PR 리뷰를 더 보기 편하게 해주는 PR 기반 위키 시스템 (나무위키 느낌)",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "prebuild": "node scripts/generate-pr-data.mjs",
    "build": "next build",
    "build:search": "pnpm prebuild && next build && pagefind --site out --output-path out/_pagefind",
    "start": "next start",
    "lint": "eslint",
    "index": "pagefind --site out --output-path out/_pagefind",
    "deploy": "pnpm build:search && gh-pages -d out -t true"
  },
  "dependencies": {
    "@octokit/app": "^16.1.2",
    "@octokit/rest": "^22.0.1",
    "gh-pages": "^6.3.0",
    "iron-session": "^8.0.4",
    "isomorphic-dompurify": "^2.32.0",
    "jose": "^6.1.1",
    "next": "15.5.4",
    "nextra": "^4.5.0",
    "nextra-theme-docs": "^4.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "pagefind": "^1.4.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
